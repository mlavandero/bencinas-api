<%- model_class = Precio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:region) %>:</strong></dt>
  <dd><%= @precio.region %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comuna) %>:</strong></dt>
  <dd><%= @precio.comuna %></dd>
  <dt><strong><%= model_class.human_attribute_name(:combustible_id) %>:</strong></dt>
  <dd><%= @precio.combustible %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_minimo) %>:</strong></dt>
  <dd><%= number_to_currency(@precio.precio_minimo) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_maximo) %>:</strong></dt>
  <dd><%= number_to_currency(@precio.precio_maximo) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_promedio) %>:</strong></dt>
  <dd><%= number_to_currency(@precio.precio_promedio) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              precios_path, :class => 'btn'  %>
</div>
